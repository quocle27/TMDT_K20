<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UIFragment.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- TODO: Update blank fragment layout -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvtopprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvborAVT"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        app:cardCornerRadius="200dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="200dp">

                            <ImageView
                                android:id="@+id/imgProfile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/banner"></ImageView>
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/nameProfile"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/cvborAVT"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="Tên"
                        android:textColor="@color/yellow_pri"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/cvtopprofile"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/prThongtin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableStart="@drawable/icon_person"
                        android:drawableEnd="@drawable/icon_next"
                        android:gravity="center_vertical"
                        android:text="    Thiết lập tài khoản"
                        android:textColor="@color/yellow_pri"
                        android:textSize="15dp"
                        android:textStyle="bold"></TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/prQLSP"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableStart="@drawable/icon_person"
                        android:drawableEnd="@drawable/icon_next"
                        android:gravity="center_vertical"
                        android:text="    Quản lý sản phẩm"
                        android:textColor="@color/yellow_pri"
                        android:textSize="15dp"
                        android:textStyle="bold"></TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/prLSDH"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableStart="@drawable/icon_person"
                        android:drawableEnd="@drawable/icon_next"
                        android:gravity="center_vertical"
                        android:text="    Lịch sử dơn hàng"
                        android:textColor="@color/yellow_pri"
                        android:textSize="15dp"
                        android:textStyle="bold"></TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableStart="@drawable/icon_person"
                        android:drawableEnd="@drawable/icon_next"
                        android:gravity="center_vertical"
                        android:text="    Đơn hàng đang xử lý"
                        android:textColor="@color/yellow_pri"
                        android:textSize="15dp"
                        android:textStyle="bold"></TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableStart="@drawable/icon_person"
                        android:drawableEnd="@drawable/icon_next"
                        android:gravity="center_vertical"
                        android:text="    Trung tâm trợ giúp"
                        android:textColor="@color/yellow_pri"
                        android:textSize="15dp"
                        android:textStyle="bold"></TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/logOut"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableStart="@drawable/icon_logout"
                        android:drawableEnd="@drawable/icon_next"
                        android:gravity="center_vertical"
                        android:text="    Đăng xuất"
                        android:textColor="@color/yellow_pri"
                        android:textSize="15dp"
                        android:textStyle="bold"></TextView>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>