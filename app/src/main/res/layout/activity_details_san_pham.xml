<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailsSanPham">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollVewDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EFECEC">


                <LinearLayout
                    android:id="@+id/l_sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white100"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgSPDetail"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_persion" />

                    <TextView
                        android:id="@+id/nameSPDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgSPDetail"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:maxLines="2"
                        android:text="Name"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/giaSPDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nameSPDetail"
                        android:layout_marginLeft="10dp"
                        android:text="Gia"
                        android:textColor="@color/red"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/motaSPDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/giaSPDetail"
                        android:layout_marginLeft="10dp"
                        android:text="Mô tả"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:id="@+id/loslg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/motaSPDetail"
                        android:layout_margin="10dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_removeedtsl"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/yellow_pri"
                            app:cardCornerRadius="5dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/icon_remove" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/edtSlgCart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="number"
                            android:paddingHorizontal="20dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_plusedtsl"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/yellow_pri"
                            app:cardCornerRadius="5dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_baseline_add_24" />
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPRShop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/l_sp"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:id="@+id/linerPRShop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgShopDetai"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_weight="3"
                                android:src="@drawable/icon_persion"></ImageView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1.3"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/namePRShop"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:text="ten shop"
                                    android:textSize="12dp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:layout_gravity="center"
                                        app:cardBackgroundColor="#00B527"
                                        app:cardCornerRadius="30dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="2"
                                        android:gravity="center_vertical"
                                        android:text="Online"
                                        android:textSize="12dp" />

                                </LinearLayout><LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:src="@drawable/location_on"
                                        android:layout_gravity="center">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="2"
                                        android:gravity="center_vertical"
                                        android:text="Địa chỉ"
                                        android:textSize="12dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="2.5"
                                android:background="@drawable/border_bg_sh"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Xem Shop"
                                android:textColor="@color/yellow_pri" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/soSPDetail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="500 Sản phẩm"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardPRShop"
                    android:orientation="vertical"
                    android:layout_marginVertical="5dp"
                    android:background="@color/white100">
                    <TextView
                        android:id="@+id/spLQ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cardPRShop"
                        android:layout_margin="10dp"
                        android:includeFontPadding="false"
                        android:text="SẢN PHẨM KHÁC CỦA SHOP"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerSPDetail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/spLQ"
                        tools:ignore="NotSibling">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>


            </RelativeLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnChinhSuaDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Chỉnh sửa"
            android:textColor="@color/black"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linerBottomDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnadd_Cart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/cart"

                android:text="Thêm"
                android:textColor="@color/white100" />

            <Button
                android:id="@+id/btn_chatDetails"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/sms"
                android:text="chat"
                android:textColor="@color/white100" />
        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>